// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false
    },
    "search.exclude": {
        "out": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    
    // Configuraci√≥n para PDF Viewer
    "workbench.editorAssociations": {
        "*.pdf": "pdf.preview"
    },
    "pdf-preview.default.autoOpen": true,
    "pdf-preview.default.enabled": true,
    "pdf-preview.scrollMode": 0,
    "pdf-preview.spreadMode": 0,
    "pdf-preview.default.backgroundColor": "#ffffff",
    "pdf-preview.default.zoomLevel": "auto",
    
    // Configuraciones adicionales recomendadas
    "editor.fontSize": 14,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Default Dark Modern"
}